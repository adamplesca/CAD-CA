<div class="container text-center mt-5">
  <h1 class="display-4">Welcome to JobBoard+ Tracker</h1>
  <p class="lead">Track your job applications and manage your career opportunities easily.</p>
  
  <% unless user_signed_in? %>
    <div class="mt-4">
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary btn-lg me-2" %>
      <%= link_to "Login", new_user_session_path, class: "btn btn-secondary btn-lg" %>
    </div>
  <% end %>
</div>
<div class="d-flex justify-content-center gap-3">
  <%= link_to "Go to Jobs", jobs_path, class: "btn btn-success btn-lg" %>
</div>


