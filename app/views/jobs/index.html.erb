<div class="container mt-5">
  <h1 class="mb-4">Job Listings</h1>

  <div class="mb-3">
    <%= link_to "New Job", new_job_path, class: "btn btn-primary" %>
  </div>

  <% if @jobs.any? %>
    <div class="table-responsive">
      <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
          <tr>
            <th>Title</th>
            <th>Company</th>
            <th>Location</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @jobs.each do |job| %>
            <tr>
              <td><%= job.title %></td>
              <td><%= job.company %></td>
              <td><%= job.location %></td>
              <td>
                <% if job.status == "Open" %>
                  <span class="badge bg-success"><%= job.status %></span>
                <% else %>
                  <span class="badge bg-secondary"><%= job.status %></span>
                <% end %>
              </td>
              <td>
                <%= link_to "Show", job_path(job), class: "btn btn-sm btn-info me-1" %>
                <%= link_to "Edit", edit_job_path(job), class: "btn btn-sm btn-warning me-1" %>
                <%= link_to "Delete", job_path(job), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-muted">No jobs found. Click "New Job" to add one.</p>
  <% end %>
</div>

